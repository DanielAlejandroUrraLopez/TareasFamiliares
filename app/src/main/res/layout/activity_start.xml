<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="318dp" />

    <LinearLayout
        android:id="@+id/txtTexto"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">
            >

            <TextView
                android:id="@+id/textView5"
                style="stro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Perro Grande"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:justificationMode="inter_word"
                android:text="El rol Perro Grande a su vez ha sido definido primordialmente como proveedor económico, sustentador de la autoridad, responsable del grupo familiar. Así, el Perro Grande representa para el Perro Chico el prototipo del mundo real, fuera de la familia y en este rol es el primer agente humano que liga al Perro Chico con la sociedad."
                android:textStyle="italic" />


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView6"
            style="stro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Perro Chico"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:justificationMode="inter_word"
            android:text=" El rol del Perro Chico hacia el Perro Grande tiene su fuente en el afecto natural que se ha brindado en la familia. El Perro Chico debe ser grato con quienes comparte con su vida, amor y trabajo le han brindado afecto y le han ayudado a crecer en sabiduría."
            android:textStyle="italic" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="500dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/padreButton"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:src="@drawable/perrograndepng"
            android:text="Padre" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/hijoButton"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:src="@drawable/perrochicopng"
            android:text="Hijo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>